# Example environment variables for RAG Chatbot API
# Copy this to .env and fill in your actual values

# ============================================
# OpenAI Configuration (Required)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# ============================================
# Sentence Transformers (Local Embeddings)
# ============================================
EMBEDDING_MODEL_NAME=BAAI/bge-base-en-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# ============================================
# Qdrant Vector Database (Required)
# ============================================
# Get free cloud account at: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=book_content
QDRANT_VECTOR_SIZE=768

# ============================================
# PostgreSQL Database (Required)
# ============================================
# Format: postgresql://user:password@host:port/database
# Render auto-provides this in production
DATABASE_URL=postgresql://localhost:5432/rag_chatbot

# ============================================
# API Server Configuration
# ============================================
API_HOST=localhost
API_PORT=8000
API_VERSION=1.0.0
ENVIRONMENT=development

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourusername.github.io

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=10

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
