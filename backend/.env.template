# OpenAI Agents Configuration (for LLM responses)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Sentence Transformers Configuration (local embeddings, BAAI/bge-base-en-v1.5)
EMBEDDING_MODEL_NAME=BAAI/bge-base-en-v1.5
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# Qdrant Cloud Configuration (768 dimensions for BAAI/bge-base-en-v1.5)
QDRANT_URL=https://your-qdrant-cluster-id.region.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=book_content
QDRANT_VECTOR_SIZE=768

# Neon Postgres Configuration (use pooled connection with -pooler suffix)
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# API Server Configuration
API_HOST=localhost
API_PORT=8000
API_VERSION=1.0.0
ENVIRONMENT=development

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,https://muhammad-aneeq.github.io

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
